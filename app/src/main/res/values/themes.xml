<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PersonalAccount" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">#6CA4D0</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#74C1ED</item>
        <item name="colorSecondaryVariant">#74C1ED</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <drawable name="logo">@drawable/logolight</drawable>
    <drawable name="schedule_fon">@drawable/schedule_fon_light</drawable>
    <drawable name="table_fon">@drawable/table_light</drawable>
    <drawable name="add_in_schedule">@drawable/add_note_in_schedule_light</drawable>
    <drawable name="calendar">@drawable/calendar_light</drawable>
    <drawable name="time">@drawable/time_light</drawable>
    <drawable name="history">@drawable/code</drawable>
    <drawable name="document">@drawable/document_light</drawable>
    <drawable name="send">@drawable/send_light</drawable>
    <drawable name="more">@drawable/more_light</drawable>
    <drawable name="file_fon">@drawable/file_fon_light</drawable>


    <style name="Theme.PersonalAccount.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PersonalAccount.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PersonalAccount.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>