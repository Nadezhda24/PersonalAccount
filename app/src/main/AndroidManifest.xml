<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.personalaccount" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PersonalAccount"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.NewChatActivity"
            android:exported="true" />
        <activity
            android:name=".ChoiseActivity"
            android:exported="false" />
        <activity
            android:name=".view.NewTaskActivity"
            android:exported="false" />
        <activity
            android:name=".view.GraduationWorkHistory"
            android:exported="false" />
        <activity
            android:name=".view.MainActivity"
            android:exported="true" />
        <activity android:name=".view.ChatActivity" />
        <activity android:name=".view.NewNoteActivity" />
        <activity android:name=".view.AuthActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>